.feed-link {
  margin-top: 20px;

  a {
    display: inline-block;
    padding: 0 15px;
    color: rgb(72, 204, 80);
    border: 1px solid rgb(72, 204, 80);
    border-radius: 4px;

    i {
      color: rgb(72, 204, 80);
      font-size: 14px;
    }

    &:hover {
      color:white;
      background: rgb(72, 204, 80);

      i { color: white; }
    }
  }
}
